<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.csi5230.sshresth.collegelibrarysystem.StudentDetails">

    <TextView
        android:id="@+id/txtStdntName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display std name here"/>

    <ImageView
        android:id="@+id/imgStdPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/btnAddBook"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtStdntName"
        android:layout_marginStart="11dp"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/txtFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStdntName"
        android:layout_toEndOf="@+id/txtStdntName"
        android:text="First Name" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtFirst"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/txtFirst"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtFirst"
        android:layout_below="@+id/txtFirst"
        android:text="Phone Number" />

    <Button
        android:id="@+id/btnAddBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPhone"
        android:text="ADD Book" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lstBooklist"
        android:layout_alignStart="@+id/txtName"
        android:layout_marginStart="19dp"
        android:text="Back" />

    <ListView
        android:id="@+id/lstBooklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnAddBook"
        android:layout_marginTop="24dp" />

</RelativeLayout>
