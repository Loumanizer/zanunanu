<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="molly.shrestha.edu.oakland.tictactoe.SecondPlayerInfo">

	<TextView android:textAppearance="?android:textAppearanceLarge" android:id="@id/textView" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Second Player Information" />
	<Button android:textSize="24.0sp" android:id="@id/bSecondPlayer" android:padding="20.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Enter Info" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" />
	<LinearLayout android:orientation="horizontal" android:id="@id/linearLayout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">

		<TextView
			android:id="@id/textPlayerName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="20.0dip"
			android:text="Player Name:"
			android:textAppearance="?android:textAppearanceLarge" />
		<EditText android:id="@id/etSMSNum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Player2" android:ems="10" android:layout_weight="1.0" android:inputType="textPersonName" />
	</LinearLayout>
	<LinearLayout android:orientation="horizontal" android:id="@id/linearLayout2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="20.0dip" android:layout_below="@id/linearLayout" android:layout_centerHorizontal="true">
		<TextView android:textAppearance="?android:textAppearanceLarge" android:id="@id/textPlayerSymbol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Player Symbol:" />
		<ImageView android:id="@id/imageView" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@android:drawable/sym_call_incoming" />
	</LinearLayout>

	<GridLayout
		android:id="@id/buttonContainer"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_above="@+id/bSecondPlayer"
		android:layout_below="@+id/linearLayout2"
		android:layout_centerHorizontal="true"
		android:columnCount="6"
		android:orientation="horizontal"
		android:rowCount="3">

		<ImageButton
			android:id="@id/b1"
			android:layout_width="114.0dip"
			android:layout_height="98.0dip"
			android:layout_column="0"
			android:layout_margin="5.0dip"
			android:layout_row="0"
			android:src="@android:drawable/ic_btn_speak_now"
			android:tag="@android:drawable/ic_btn_speak_now" />

		<ImageButton
			android:id="@id/b2"
			android:layout_width="114.0dip"
			android:layout_height="98.0dip"
			android:layout_column="1"
			android:layout_margin="5.0dip"
			android:layout_row="0"
			android:src="@android:drawable/ic_dialog_map"
			android:tag="@android:drawable/ic_dialog_map" />

		<ImageButton
			android:id="@id/b3"
			android:layout_width="114.0dip"
			android:layout_height="98.0dip"
			android:layout_column="2"
			android:layout_margin="5.0dip"
			android:layout_row="0"
			android:src="@android:drawable/ic_dialog_map"
			android:tag="@android:drawable/ic_dialog_map" />

		<ImageButton
			android:id="@id/b4"
			android:layout_width="114.0dip"
			android:layout_height="98.0dip"
			android:layout_column="0"
			android:layout_margin="5.0dip"
			android:layout_row="1"
			android:src="@android:drawable/ic_dialog_email"
			android:tag="@android:drawable/ic_dialog_email" />

		<ImageButton
			android:id="@id/b5"
			android:layout_width="114.0dip"
			android:layout_height="98.0dip"
			android:layout_column="1"
			android:layout_margin="5.0dip"
			android:layout_row="1"
			android:src="@android:drawable/ic_menu_mylocation"
			android:tag="@android:drawable/ic_menu_mylocation" />

		<ImageButton
			android:id="@id/b6"
			android:layout_width="114.0dip"
			android:layout_height="98.0dip"
			android:layout_column="2"
			android:layout_margin="5.0dip"
			android:layout_row="1"
			android:src="@android:drawable/presence_video_away"
			android:tag="@android:drawable/presence_video_away" />
	</GridLayout>

</RelativeLayout>
