<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.csi5230.salamdawood.csi5230assignment1.WaitResponse">

    <TextView
        android:id="@+id/textView"
        android:layout_width="373dp"
        android:layout_height="37dp"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="16dp"
        android:text="Please Accept or Decline Game Request"
        app:layout_constraintBottom_toTopOf="@+id/btnAccept"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="7dp" />

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="45dp"
        android:text="Accept"
        app:layout_constraintBottom_toTopOf="@+id/btnDecline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnDecline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="4dp"
        android:text="Decline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAccept" />
</android.support.constraint.ConstraintLayout>
