<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.csi5230.sshresth.tictactoe.GameScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Turn"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/tvCurrentPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtGameStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send or Wait for Game Request"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="60dp" />

    <GridLayout
        android:id="@+id/gridTicTac"
        android:layout_width="match_parent"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_height="match_parent">

    </GridLayout>

</LinearLayout>
